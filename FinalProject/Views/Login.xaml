<Window x:Class="FinalProject.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject.Views"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="616.48">
    <Grid Margin="0,0,2,2">
        <Label Content="Username" HorizontalAlignment="Left" Margin="134,93,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.206,-0.956"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="134,176,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="227,96,0,0" TextWrapping="Wrap" Text="{Binding ModelUser.username, Mode=TwoWay}" VerticalAlignment="Top" Width="298"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="227,180,0,0" TextWrapping="Wrap" Text="{Binding ModelUser.password, Mode=TwoWay}" VerticalAlignment="Top" Width="298"/>
        <Button Content="LOGIN" Command="{Binding ReadLoginCommand}" HorizontalAlignment="Left" Margin="47,279,0,0" VerticalAlignment="Top" Width="193" Height="105"/>
        <Button x:Name="CLOSE" Click="CloseButton" Content="CLOSE" HorizontalAlignment="Left" Margin="332,279,0,0" VerticalAlignment="Top" Width="193" Height="105"/>

    </Grid>
</Window>
